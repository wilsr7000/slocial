<style>
  .profile-form {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .avatar-preview {
    width: 120px;
    height: 120px;
    border-radius: 60px;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px auto;
    overflow: hidden;
    border: 3px solid var(--border);
  }
  
  .avatar-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .success-message {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
</style>

<h1>Edit Profile</h1>

<% if (typeof req !== 'undefined' && req.query.saved) { %>
  <div class="success-message">
    âœ“ Profile updated successfully!
  </div>
<% } %>

<div class="profile-form">
  <div class="avatar-preview">
    <% if (profile.avatar_url) { %>
      <img src="<%= profile.avatar_url %>" alt="Avatar" onerror="this.style.display='none'; this.parentElement.innerHTML='ðŸ‘¤';">
    <% } else { %>
      <span style="font-size: 48px;">ðŸ‘¤</span>
    <% } %>
  </div>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>

  <form method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    
    <label>Handle</label>
    <input type="text" value="@<%= profile.handle %>" disabled style="background: #f5f5f5;" />
    
    <label>Email</label>
    <input type="email" value="<%= profile.email %>" disabled style="background: #f5f5f5;" />
    
    <label>Avatar URL</label>
    <input 
      type="url" 
      name="avatar_url" 
      value="<%= profile.avatar_url || '' %>" 
      placeholder="https://example.com/avatar.jpg"
      onchange="updateAvatarPreview(this.value)"
    />
    <p class="hint">Enter a URL to an image for your profile picture</p>
    
    <label>Bio</label>
    <textarea 
      name="bio" 
      rows="4" 
      maxlength="500" 
      placeholder="Tell us about yourself..."
    ><%= profile.bio || '' %></textarea>
    <p class="hint">A brief bio that appears with your letters (max 500 characters)</p>
    
    <button type="submit" class="btn btn-primary">Save Profile</button>
    <a href="/" class="btn" style="margin-left: 10px;">Cancel</a>
  </form>
</div>

<script>
  function updateAvatarPreview(url) {
    const preview = document.querySelector('.avatar-preview');
    if (url) {
      preview.innerHTML = `<img src="${url}" alt="Avatar" onerror="this.style.display='none'; this.parentElement.innerHTML='ðŸ‘¤';">`;
    } else {
      preview.innerHTML = '<span style="font-size: 48px;">ðŸ‘¤</span>';
    }
  }
</script>
