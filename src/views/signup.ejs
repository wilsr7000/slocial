<style>
  .logo-container {
    text-align: center;
    margin: 40px auto 30px;
    animation: fadeIn 0.8s ease-in;
  }
  
  .logo-image {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .logo-image:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 30px rgba(0,0,0,0.15);
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  [data-theme="dark"] .logo-image {
    box-shadow: 0 4px 20px rgba(255,255,255,0.05);
  }
  
  [data-theme="dark"] .logo-image:hover {
    box-shadow: 0 6px 30px rgba(255,255,255,0.1);
  }
  
  .auth-container {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .oauth-section {
    margin: 30px 0;
    text-align: center;
  }
  
  .divider {
    display: flex;
    align-items: center;
    margin: 30px 0;
  }
  
  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border);
  }
  
  .divider span {
    padding: 0 16px;
    color: var(--muted);
    font-size: 14px;
  }
  
  .oauth-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .oauth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 12px 20px;
    border: 1px solid var(--border);
    border-radius: 8px;
    background: var(--card);
    color: var(--fg);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .oauth-btn:hover {
    background: var(--hover-bg);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px var(--shadow-heavy);
  }
  
  .oauth-btn.google {
    border-color: #4285f4;
  }
  
  .oauth-btn.apple {
    border-color: var(--border);
    background: var(--card);
    color: var(--fg);
  }
  
  .oauth-btn.apple:hover {
    background: var(--hover-bg);
    transform: translateY(-1px);
  }
  
  .oauth-icon {
    width: 20px;
    height: 20px;
  }
</style>

<div class="logo-container">
  <img src="/static/images/slocial.png" alt="Slocial" class="logo-image" />
</div>

<div class="auth-container">
  <h1>Create account</h1>
  
  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>
  
  <!-- OAuth Sign-Up Options -->
  <div class="oauth-section">
    <div class="oauth-buttons">
      <a href="/auth/google" class="oauth-btn google">
        <svg class="oauth-icon" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Sign up with Google
      </a>
      
      <form action="/auth/apple" method="get" style="margin: 0;">
        <button type="submit" class="oauth-btn apple" style="width: 100%; cursor: pointer;">
          <svg class="oauth-icon" viewBox="0 0 24 24" fill="white">
            <path d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.06-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
          </svg>
          Sign up with Apple
        </button>
      </form>
    </div>
  </div>
  
  <div class="divider">
    <span>or</span>
  </div>
  
  <!-- Traditional Signup Form -->
  <form method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <label>Handle <input type="text" name="handle" value="<%= values.handle || '' %>" required /></label>
    <label>Email <input type="email" name="email" value="<%= values.email || '' %>" required /></label>
    <label>Password <input type="password" name="password" required /></label>
    <button type="submit">Create account with email</button>
    <p style="text-align: center; margin-top: 20px;">Already have an account? <a href="/login">Sign in</a></p>
    <p class="hint" style="text-align: center;">Handles are 3â€“20 letters or numbers.</p>
  </form>
</div>