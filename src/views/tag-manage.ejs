<style>
  .manage-container {
    max-width: 1000px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  
  .manage-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #ddd;
  }
  
  .manage-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .tag-info {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    color: #666;
  }
  
  .alert {
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 4px;
  }
  
  .alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }
  
  .section {
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .requests-list {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .request-item {
    padding: 1.5rem;
    border-bottom: 1px solid #eee;
  }
  
  .request-item:last-child {
    border-bottom: none;
  }
  
  .request-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 0.5rem;
  }
  
  .request-user {
    font-weight: bold;
    font-size: 1.1rem;
  }
  
  .request-date {
    color: #666;
    font-size: 0.875rem;
  }
  
  .request-message {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
    font-style: italic;
  }
  
  .request-actions {
    display: flex;
    gap: 1rem;
    align-items: flex-end;
  }
  
  .response-form {
    flex: 1;
  }
  
  .form-group {
    margin-bottom: 0.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.25rem;
    font-weight: 500;
    font-size: 0.875rem;
  }
  
  .form-group input[type="text"] {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  
  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.875rem;
    transition: opacity 0.2s;
  }
  
  .btn:hover {
    opacity: 0.9;
  }
  
  .btn-success {
    background-color: #28a745;
    color: white;
  }
  
  .btn-danger {
    background-color: #dc3545;
    color: white;
  }
  
  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }
  
  .empty-state {
    text-align: center;
    padding: 3rem;
    color: #666;
  }
  
  .permissions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }
  
  .permission-card {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
  }
  
  .permission-user {
    font-weight: bold;
    margin-bottom: 0.25rem;
  }
  
  .permission-type {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background-color: #007bff;
    color: white;
    border-radius: 4px;
    font-size: 0.75rem;
    margin-top: 0.5rem;
  }
  
  .permission-universal {
    background-color: #28a745;
  }
  
  .owners-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }
  
  .owner-card {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
  }
  
  .owner-name {
    font-weight: bold;
    margin-bottom: 0.25rem;
  }
  
  .owner-type {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background-color: #ffc107;
    color: #333;
    border-radius: 4px;
    font-size: 0.75rem;
  }
  
  .owner-type.founder {
    background-color: #ffd700;
  }
  
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: #007bff;
    text-decoration: none;
  }
  
  .back-link:hover {
    text-decoration: underline;
  }
</style>

<div class="manage-container">
  <a href="/tags" class="back-link">‚Üê Back to Tags</a>
  
  <div class="manage-header">
    <h1>Manage Tag: #<%= tag.name %></h1>
    <div class="tag-info">
      <span>üìù <%= tag.short_description || tag.description || 'No description' %></span>
      <span>|</span>
      <span><%= tag.is_public ? 'üåç Public' : 'üîí Private' %></span>
      <span>|</span>
      <span>üìä Usage: <%= tag.usage_count || 0 %></span>
    </div>
    <% 
      // Check if current user is the founder
      const isFounder = owners && owners.some(o => o.user_id === user.id && o.ownership_type === 'founder');
    %>
    <% if (isFounder) { %>
      <button class="btn btn-primary" style="margin-top: 1rem;" onclick="showEditTagModal()">
        ‚úèÔ∏è Edit Tag Details
      </button>
      <p style="color: #666; font-size: 0.875rem; margin-top: 0.5rem;">
        As the founder, only you can edit this tag's details.
      </p>
    <% } else { %>
      <p style="color: #666; font-size: 0.875rem; margin-top: 0.5rem;">
        Only the tag founder can edit tag details. Co-owners can manage access requests.
      </p>
    <% } %>
  </div>
  
  <% if (message) { %>
    <div class="alert alert-success"><%= message %></div>
  <% } %>
  
  <!-- Pending Access Requests -->
  <div class="section">
    <h2 class="section-title">Pending Access Requests</h2>
    
    <% if (pendingRequests && pendingRequests.length > 0) { %>
      <div class="requests-list">
        <% pendingRequests.forEach(request => { %>
          <div class="request-item">
            <div class="request-header">
              <div>
                <div class="request-user">@<%= request.handle %></div>
                <div class="request-date">Requested <%= new Date(request.requested_at).toLocaleDateString() %></div>
              </div>
            </div>
            
            <% if (request.request_message) { %>
              <div class="request-message">
                "<%= request.request_message %>"
              </div>
            <% } %>
            
            <% if (request.bio) { %>
              <p style="color: #666; font-size: 0.875rem; margin: 0.5rem 0;">
                Bio: <%= request.bio %>
              </p>
            <% } %>
            
            <form action="/tags/<%= tag.id %>/manage/request/<%= request.id %>" method="POST">
              <div class="request-actions">
                <div class="response-form">
                  <div class="form-group">
                    <label for="response-<%= request.id %>">Response message (optional):</label>
                    <input type="text" 
                           name="response_message" 
                           id="response-<%= request.id %>"
                           placeholder="Add a message with your decision...">
                  </div>
                </div>
                <div class="action-buttons">
                  <button type="submit" name="action" value="approve" class="btn btn-success">
                    ‚úÖ Approve
                  </button>
                  <button type="submit" name="action" value="reject" class="btn btn-danger">
                    ‚ùå Reject
                  </button>
                </div>
              </div>
            </form>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p>No pending access requests</p>
      </div>
    <% } %>
  </div>
  
  <!-- Current Permissions -->
  <div class="section">
    <h2 class="section-title">Current Permissions</h2>
    
    <% if (permissions && permissions.length > 0) { %>
      <div class="permissions-grid">
        <% permissions.forEach(perm => { %>
          <div class="permission-card">
            <% if (perm.user_id) { %>
              <div class="permission-user">@<%= perm.handle || 'Unknown' %></div>
              <div style="color: #666; font-size: 0.875rem;"><%= perm.email %></div>
            <% } else { %>
              <div class="permission-user">All Users</div>
              <div style="color: #666; font-size: 0.875rem;">Universal access</div>
            <% } %>
            <span class="permission-type <%= !perm.user_id ? 'permission-universal' : '' %>">
              <%= perm.permission_type %>
            </span>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p>No permissions granted yet</p>
      </div>
    <% } %>
  </div>
  
  <!-- Tag Owners -->
  <div class="section">
    <h2 class="section-title">Tag Owners</h2>
    <p style="color: #666; font-size: 0.875rem; margin-bottom: 1rem;">
      <strong>Founder:</strong> Can edit tag details and manage everything<br>
      <strong>Co-owners:</strong> Can manage access requests and permissions
    </p>
    
    <% if (owners && owners.length > 0) { %>
      <div class="owners-list">
        <% owners.forEach(owner => { %>
          <div class="owner-card">
            <div class="owner-name">@<%= owner.handle %></div>
            <div style="color: #666; font-size: 0.875rem;"><%= owner.email %></div>
            <span class="owner-type <%= owner.ownership_type %>">
              <%= owner.ownership_type %>
              <% if (owner.ownership_type === 'founder') { %>
                üëë (Can Edit)
              <% } %>
            </span>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p>No owners found</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Edit Tag Modal (only for founders) -->
<% if (isFounder) { %>
<div id="editTagModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>‚úèÔ∏è Edit Tag Details</h2>
      <button class="close-modal" onclick="closeEditModal()">&times;</button>
    </div>
    
    <form id="editTagForm" action="/tags/<%= tag.id %>/edit" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      
      <div class="modal-body">
        <div class="form-group">
          <label for="tagName">Tag Name *</label>
          <input 
            type="text" 
            id="tagName" 
            name="name" 
            required 
            value="<%= tag.name %>"
            maxlength="50"
          />
          <div class="char-count" id="nameCount">0 / 50</div>
        </div>
        
        <div class="form-group">
          <label for="shortDescription">Short Description *</label>
          <input 
            type="text" 
            id="shortDescription" 
            name="short_description" 
            required 
            value="<%= tag.short_description || tag.description || '' %>"
            maxlength="100"
          />
          <div class="char-count" id="shortCount">0 / 100</div>
        </div>
        
        <div class="form-group">
          <label for="longDescription">Long Description</label>
          <textarea 
            id="longDescription" 
            name="long_description" 
            maxlength="500"
          ><%= tag.long_description || '' %></textarea>
          <div class="char-count" id="longCount">0 / 500</div>
        </div>
        
        <div class="form-group">
          <label for="imageUrl">Tag Image URL (optional)</label>
          <input 
            type="url" 
            id="imageUrl" 
            name="image_url" 
            value="<%= tag.image_url || '' %>"
            placeholder="https://example.com/image.jpg"
          />
          <div class="help-text">An image to represent this tag (square images work best)</div>
        </div>
        
        <div class="form-group">
          <label>
            <input type="checkbox" name="is_public" value="1" <%= tag.is_public ? 'checked' : '' %> />
            Make this tag public (visible to all users)
          </label>
        </div>
        
        <div class="info-note">
          <strong>Note:</strong> As the founder, you have exclusive rights to edit this tag. 
          Co-owners can help manage access requests but cannot modify tag details.
        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
  </div>
</div>

